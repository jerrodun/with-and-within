{%- assign section_color = section.settings.color_scheme -%}
{%- assign section_bg_color = section.settings.section_bg_color -%}
{%- assign section_custom_padding = section.settings.section_custom_padding -%}

{% if section_custom_padding == 'smaller' %}
  {% assign section_custom_padding = 'section-with-padding--smaller' %}
{% elsif section_custom_padding == 'larger' %}
  {% assign section_custom_padding = 'section-with-padding--larger' %}
{% else %}
  {% assign section_custom_padding = null %}
{% endif %}


{% assign full_width = section.settings.full_width %}
{% assign slide_class = 'four-fifths px2 lg--up--px3 max-width--3' %}
{% if full_width %}
{% assign slide_class = 'full--w px2' %}
{% endif %}

{%- comment -%}Styles for forcing an image height to the slider. The images will match the tallest image on the slide{%- endcomment -%}
{% comment %} <style>
  .inherit-height {
    height: inherit;
  }

  .inherit-height > div,
  .inherit-height > div > div,
  .inherit-height > div > div > div,
  .inherit-height > div > div > div > img {
    height: 100%;
  }

  .inherit-height > div > div > div > img {
    object-fit: cover;
    max-height: initial !important;
  }

</style> {% endcomment %}
{%- comment -%}Functionality to set the slider images height the same.{%- endcomment -%}
<script>
  /*
   * Adds the inherit height classes to every slide.
   */
  function addInheritHeightClasses() {
    const slides = document.querySelectorAll('.slideshow__slide');
    slides.forEach(slide => {
      slide.classList.add('inherit-height');
    });
  }

  /*
  * Removes all inherit height classes while in the window resize event.
  */
  function removeInheritHeightClasses() {
    const slides = document.querySelectorAll('.slideshow__slide');
    slides.forEach(slide => {
      slide.classList.remove('inherit-height');
    });
  }

  /*
   * Calls the addInheritHeightClasses() when the page first loads
   * so that we're able to already match the image height to the
   * taller ones.
   */
  document.addEventListener('DOMContentLoaded', () => {
    addInheritHeightClasses();
  });

  /*
  * Calls the addInheritHeightClasses function every time the timeout fires.
  */
  function onWindowResizeForSlider(){
      addInheritHeightClasses();
  }

  // Handle function calling with a timeout.
  let doit;
  window.onresize = function(){
    clearTimeout(doit);
    doit = setTimeout(onWindowResizeForSlider, 200);
    removeInheritHeightClasses();
  };
</script>

<section class="slideshow slideshow-aw-custom section-with-padding {{ section_custom_padding }} bg--{{ section_color }}-background {{ section_bg_color }}" data-section-type="slideshow" data-section-id="{{ section.id }}" {% if section.blocks.size > 2 %}data-wrap-around="true"{% endif %} data-slide-speed="{{ section.settings.slide_speed }}" {% if section.settings.auto_rotate %}data-auto-rotate="true"{% endif %}>
  <div class="relative">
    <div class="slideshow__slides is-hidden">

      {% for block in section.blocks %}

        {%- assign text_color_overlay = block.settings.color_overlay -%}
        {%- assign content_position = block.settings.content_position -%}
        {%- assign text_align = block.settings.text_align -%}
        {%- assign heading = block.settings.heading -%}
        {%- assign text = block.settings.text -%}
        {%- assign cta_text = block.settings.cta_text -%}
        {%- assign cta_url = block.settings.cta_url -%}

        {%- if block.settings.feature_image -%}
          {%- assign feature_image = block.settings.feature_image -%}
        {%- else -%}
          {%- assign placeholder = true -%}
        {%- endif -%}

        <div class="slideshow__slide {{ slide_class }}"  {{ block.shopify_attributes }}>
          <div class="image-with-text__container relative color--{{ section_color }}-text lg--up--color--{{ text_color_overlay }}-text">

            <div class="image-with-text__image">
              {% if block.settings.feature_image  %}
                {% render 'responsive-image' with
                  image: feature_image,
                  max_width: 2000,
                  max_height: 2000,
                  section_color: section_color,
                  responsive_image_counter: forloop.index,
                %}
              {% else %}
                <div class="image-with-text__placeholder full bg--{{ section_color }}-placeholder p1 lg--up--p3">
                  <div class="image-with-text__placeholder-svg">
                    {{ 'lifestyle-1' | placeholder_svg_tag }}
                  </div>
                </div>
              {% endif %}
            </div>

            {% if heading != blank or text != blank or cta_url != blank %}
            <div class="image-with-text__content lg--up--absolute lg--up--full lg--up--top--0 lg--up--left--0 lg--up--p4 wd--p5 z1">
              {% assign content_position = content_position | split: ' ' %}
              <div class="lg--up--table lg--up--full">
                <div class="lg--up--table-cell lg--up--{{ content_position[0] }} lg--up--{{ content_position[1] }}">
                  <div class="inline-block lg--up--{{ text_align }} lg--up--one-third">
                    <div class="mt3 lg--up--m0 lg--up--one-whole">
                      {% if heading != blank %}
                        <h2 class="f--heading font-size__heading m0">{{ heading }}</h2>
                      {% endif %}
                      {% if text != blank %}
                        <div class="font-size__basic mt2">
                          {{ text }}
                        </div>
                      {% endif %}
                      {% if cta_url != blank %}
                        <a class="mt2 inline-block font-size__basic f--accent link-underline--{{ section_color }} hover-underline--{{ section_color }} lg--up--link-underline--{{ text_color_overlay }} lg--up--hover-underline--{{ text_color_overlay }}  lg--up--inline-block" href="{{ cta_url }}">
                          {{ cta_text }}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class='flickity__button-container absolute right--0 pt1 pr2'>
      <button class="btn border--none bg--transparent btn--next color--{{ section_color }}-text hv--{{ section_color }}-accent font-size--sm pt1" aria-label="Next icon">{% render 'icon-next' %}</button>
    </div>

  </div>
</section>

