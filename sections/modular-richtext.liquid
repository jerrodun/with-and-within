{{ 'global-new-theme.css' | asset_url | stylesheet_tag }}

<style>
  .modular-richtext {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .modular-richtext {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modular-richtext__wrapper {
    max-width: 850px;
    margin: 0 auto;
  }

  .modular-richtext__wrapper--center {
    text-align: center;
  }

  .modular-richtext__heading {
    margin-bottom: 2rem;
    color: {{ section.settings.heading_color }};
  }

  .modular-richtext__text {
    margin-bottom: 2rem;
    color: {{ section.settings.text_color }};
  }

  .modular-richtext__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: {% if section.settings.text_alignment == 'center' %}center{% else %}flex-start{% endif %};
  }

  .button {
    padding: 0.8rem 1.5rem;
    text-decoration: none;
    display: inline-block;
  }

  .button--primary {
    background-color: {{ section.settings.button1_background_color }};
    color: {{ section.settings.button1_text_color }};
    border: 1px solid {{ section.settings.button1_background_color }};
  }

  .button--primary:hover {
    background-color: {{ section.settings.button1_hover_color }};
    border-color: {{ section.settings.button1_hover_color }};
  }

  .button--secondary {
    background-color: transparent;
    color: {{ section.settings.button2_text_color }};
    border: 1px solid {{ section.settings.button2_border_color }};
  }

  .button--secondary:hover {
    background-color: {{ section.settings.button2_hover_color }};
    color: {{ section.settings.background_color }};
  }
</style>

<div class="modular-richtext" {{ section.shopify_attributes }}>
  <div class="page-width">
    <div class="modular-richtext__wrapper{% if section.settings.text_alignment == 'center' %} modular-richtext__wrapper--center{% endif %}">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {% when 'heading' %}
            {%- if block.settings.heading != blank -%}
              <div {{ block.shopify_attributes }}>
                <h2 class="modular-richtext__heading h1">
                  {{ block.settings.heading | escape }}
                </h2>
              </div>
            {%- endif -%}
          {% when 'text' %}
            {%- if block.settings.text != blank -%}
              <div {{ block.shopify_attributes }}>
                <div class="modular-richtext__text rte">
                  {{ block.settings.text }}
                </div>
              </div>
            {%- endif -%}
          {% when 'buttons' %}
            {%- if block.settings.button_link_1 != blank or block.settings.button_link_2 != blank -%}
              <div class="modular-richtext__buttons button-wrapper" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label_1 != blank -%}
                  <a href="{{ block.settings.button_link_1 }}" 
                     class="button{% if block.settings.button_style_1 == 'secondary' %} button--secondary{% else %} button--primary{% endif %}">
                    {{ block.settings.button_label_1 | escape }}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a href="{{ block.settings.button_link_2 }}" 
                     class="button{% if block.settings.button_style_2 == 'secondary' %} button--secondary{% else %} button--primary{% endif %}">
                    {{ block.settings.button_label_2 | escape }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
        {% endcase %}
      {%- endfor -%}
    </div>
  </div>
</div>

