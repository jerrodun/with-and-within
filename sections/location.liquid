      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "map_image",
      "label": "Map Image"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "color-background-1",
          "label": "Background 1"
        },
        {
          "value": "color-background-2",
          "label": "Background 2"
        },
        {
          "value": "color-accent-1",
          "label": "Accent 1"
        },
        {
          "value": "color-accent-2",
