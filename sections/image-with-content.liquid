{% schema %}
{
  "name": "Image with Content",
  "tag": "section",
  "class": "section image-with-content-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image position",
      "options": [
        {
          "value": "image-left",
          "label": "Image on left"
        },
        {
          "value": "image-right",
          "label": "Image on right"
        }
      ],
      "default": "image-left"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Meet your expert"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Kimberly Yap Tan"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Aesthetician"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Licensed as an esthetician since 2004, Kim started with & within, San Francisco's first adult acne clinic (then called skinsalvation) in 2008. Book any treatment with her and experience the expertise that thousands of other clients have relied on and trusted to help them get clear.</p>"
    },
    {
      "type": "header",
      "content": "Primary button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Book an appointment"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Secondary button"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Image with Content",
      "settings": {}
    }
  ]
}
{% endschema %}

<div class="color-background-1 isolate">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="image-with-content-container {% if section.settings.layout == 'image-right' %}image-right{% else %}image-left{% endif %}">
      <div class="image-with-content__image-wrapper">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1000 | image_tag:
            loading: 'lazy',
            sizes: '(min-width: 750px) 50vw, 100vw',
            widths: '375, 550, 750, 1100, 1500, 2200',
            class: 'image-with-content__image'
          }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="image-with-content__content-wrapper">
        <div class="image-with-content__content">
          {% if section.settings.subheading != blank %}
            <p class="image-with-content__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
          
          <div class="image-with-content__headline-container">
            {% if section.settings.heading != blank %}
              <h2 class="image-with-content__heading">{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
              <p class="image-with-content__subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
          </div>

          {% if section.settings.text != blank %}
            <div class="image-with-content__text rte">
              {{ section.settings.text }}
            </div>
          {% endif %}

          <div class="image-with-content__buttons">
            {% if section.settings.button_label != blank %}
              <a href="{{ section.settings.button_link }}" class="button button--primary">
                {{ section.settings.button_label }}
              </a>
            {% endif %}
            
            {% if section.settings.secondary_button_label != blank %}
              <a href="{{ section.settings.secondary_button_link }}" class="button button--secondary">
                {{ section.settings.secondary_button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .image-with-content-container {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  @media screen and (min-width: 750px) {
    .image-with-content-container {
      flex-direction: row;
      gap: 3rem;
    }

    .image-with-content-container.image-right {
      flex-direction: row-reverse;
    }
  }

  .image-with-content__image-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-with-content__image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .image-with-content__content-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
  }

  .image-with-content__content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    max-width: 53rem;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .image-with-content__content {
      padding: 6rem 0;
    }
  }

  .image-with-content__subheading {
    font-size: var(--font-size-base);
    color: var(--color-tan);
    margin: 0;
  }

  .image-with-content__headline-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .image-with-content__heading {
    font-size: var(--font-size-heading-1);
    color: var(--color-terracotta);
    margin: 0;
    font-weight: 400;
    line-height: 1.2;
  }

  .image-with-content__subtitle {
    font-size: var(--font-size-base);
    color: var(--color-tan);
    margin: 0;
  }

  .image-with-content__text {
    font-size: var(--font-size-base);
    color: var(--color-brown);
    line-height: 1.6;
  }

  .image-with-content__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .button--primary {
    background-color: var(--color-green);
    color: var(--color-light-tan);
    border: none;
    padding: 1rem 2rem;
    font-size: var(--font-size-base);
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .button--primary:hover {
    background-color: var(--color-dark-green);
  }

  .button--secondary {
    background-color: transparent;
    color: var(--color-tan);
    border: 1px solid var(--color-tan);
    padding: 1rem 2rem;
    font-size: var(--font-size-base);
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .button--secondary:hover {
    background-color: var(--color-tan);
    color: var(--color-dark-brown);
  }
</style>