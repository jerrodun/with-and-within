<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<style>
.testimonials-section {
  padding: 0;
}

.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

.testimonials-container {
  position: relative;
  max-width: 100%;
}

.testimonials-header {
  text-align: center;
  margin-bottom: 3rem;
}

.testimonials-heading {
  font-size: 1.25rem;
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.testimonials-subheading {
  font-size: 1.5rem;
  font-weight: 400;
}

.testimonial-slide {
  display: flex;
  justify-content: center;
}

.testimonial-content {
  max-width: 44rem;
  text-align: center;
}

.testimonial-highlight {
  font-size: 3rem;
  line-height: 1.2;
  font-weight: 400;
  margin-bottom: 1.5rem;
}

.testimonial-text {
  font-size: 1.125rem;
  line-height: 1.5;
  margin-bottom: 1.5rem;
}

.testimonial-author {
  font-size: 1rem;
  font-weight: 500;
}

.testimonials-navigation {
  display: flex;
  justify-content: space-between;
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  pointer-events: none;
  padding: 0 1rem;
}

.testimonial-button {
  width: 3.4rem;
  height: 3.4rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: transparent;
  pointer-events: auto;
  transition: background-color 0.3s, color 0.3s;
}

.testimonial-button--next {
  transform: rotate(180deg);
}

.testimonial-button--active {
  background-color: {{ section.settings.button_active_color }};
  border-color: {{ section.settings.button_active_color }};
}

.testimonial-button:hover,
.testimonial-button:focus {
  background-color: {{ section.settings.button_active_color }};
  border-color: {{ section.settings.button_active_color }};
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  border: 0;
}

.swiper {
  margin-left: auto;
  margin-right: auto;
  position: relative;
  overflow: hidden;
  list-style: none;
  padding: 0;
  z-index: 1;
}

.swiper-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
  display: flex;
  transition-property: transform;
  box-sizing: content-box;
}

.swiper-slide {
  flex-shrink: 0;
  width: 100%;
  height: 100%;
  position: relative;
  transition-property: transform;
}

@media screen and (max-width: 749px) {
  .testimonial-highlight {
    font-size: 2rem;
  }

  .testimonial-text {
    font-size: 1rem;
  }

  .testimonials-navigation {
    padding: 0;
  }

  .testimonial-button {
    width: 2.8rem;
    height: 2.8rem;
  }
}
</style>

<div class="testimonials-section section-{{ section.id }}-padding" id="Testimonials-{{ section.id }}" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};" {{ section.shopify_attributes }}>
  <div class="page-width">
    <div class="testimonials-container">
      <div class="testimonials-header">
        {% if section.settings.heading != blank %}
          <h2 class="testimonials-heading" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="testimonials-subheading" style="color: {{ section.settings.subheading_color }};">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>

      <div class="swiper testimonials-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'testimonial' %}
                <div class="swiper-slide testimonial-slide" {{ block.shopify_attributes }}>
                  <div class="testimonial-content">
                    {% if block.settings.quote_highlight != blank %}
                      <h3 class="testimonial-highlight" style="color: {{ section.settings.text_color }};">{{ block.settings.quote_highlight }}</h3>
                    {% endif %}
                    {% if block.settings.quote_text != blank %}
                      <div class="testimonial-text" style="color: {{ section.settings.text_color }};">{{ block.settings.quote_text }}</div>
                    {% endif %}
                    {% if block.settings.author_name != blank %}
                      <p class="testimonial-author" style="color: {{ section.settings.text_color }};">{{ block.settings.author_name }}</p>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>

      <div class="testimonials-navigation">
        <button class="testimonial-button testimonial-button--prev" style="border-color: {{ section.settings.button_color }}; color: {{ section.settings.button_color }};" aria-label="Previous testimonial">
          <span class="visually-hidden">Previous testimonial</span>
          <div style="transform: rotate(180deg);">
            {% render 'testimonial-arrow' %}
          </div>
        </button>
        <button class="testimonial-button testimonial-button--next" style="border-color: {{ section.settings.button_color }}; color: {{ section.settings.button_color }};" aria-label="Next testimonial">
          <span class="visually-hidden">Next testimonial</span>
          {% render 'testimonial-arrow' %}
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiperEl = document.querySelector('#Testimonials-{{ section.id }} .testimonials-swiper');
    
    if (!swiperEl) return;
    
    const prevButtonEl = document.querySelector('#Testimonials-{{ section.id }} .testimonial-button--prev');
    const nextButtonEl = document.querySelector('#Testimonials-{{ section.id }} .testimonial-button--next');
    
    const swiper = new Swiper(swiperEl, {
      spaceBetween: 30,
      grabCursor: true,
      loop: true,
      autoHeight: true,
      navigation: {
        prevEl: prevButtonEl,
        nextEl: nextButtonEl,
      },
      breakpoints: {
        320: {
          slidesPerView: 1
        },
        750: {
          slidesPerView: 1
        }
      }
    });
    
    // Accessibility enhancements
    if (prevButtonEl && nextButtonEl) {
      prevButtonEl.addEventListener('click', function() {
        nextButtonEl.classList.remove('testimonial-button--active');
        this.classList.add('testimonial-button--active');
        setTimeout(() => {
          this.classList.remove('testimonial-button--active');
        }, 300);
      });
      
      nextButtonEl.addEventListener('click', function() {
        prevButtonEl.classList.remove('testimonial-button--active');
        this.classList.add('testimonial-button--active');
        setTimeout(() => {
          this.classList.remove('testimonial-button--active');
        }, 300);
      });
    }
  });
</script>

