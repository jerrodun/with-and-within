<style>
  .slideshow--{{ section.id }} .slideshow {
    position: relative;
  }

  .slideshow--{{ section.id }} .slideshow__slide {
    width: 100%;
    height: {{ section.settings.height }}vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .slideshow--{{ section.id }} .slideshow__slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .slideshow--{{ section.id }} .hero-text-container {
    position: absolute;
    top: 50%;
    left: var(--space-5);
    padding-left: var(--space-5);
    padding-right: var(--space-5);
    transform: translate(0, -50%);
    text-align: center;
    color: #fff;
    padding: 40px;
    background-color: rgba(255, 255, 255, 0.8);
    max-width: 500px;
  }

  .slideshow--{{ section.id }} .hero-title {
    font-size: 48px;
    font-family: Myriad-Pro;
    text-transform: var(--heading-text-transform);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    line-height: 1.2;
    margin-bottom: 0;
  }

  .slideshow--{{ section.id }} .hero-title-underlined-text {
    position: relative;
    display: inline-block;
  }

  .slideshow--{{ section.id }} .hero-title-underline {
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #fff;
  }

  .slideshow--{{ section.id }} .hero-richtext {
    font-size: 18px;
    line-height: 1.6;
    margin: 40px 0;
  }

  .slideshow--{{ section.id }} .hero-cta-wrapper {
    display: flex;
  }

  .slideshow--{{ section.id }} .flickity-button {
    background: transparent;
    color: #fff;
  }

  .slideshow--{{ section.id }} .flickity-prev-next-button {
    width: 40px;
    height: 40px;
  }

  .slideshow--{{ section.id }} .flickity-page-dots {
    bottom: 20px;
  }

  .slideshow--{{ section.id }} .flickity-page-dots .dot {
    background: #fff;
    opacity: 0.5;
  }

  .slideshow--{{ section.id }} .flickity-page-dots .dot.is-selected {
    opacity: 1;
  }

  .slideshow--{{ section.id }} .slideshow__slide-image {
    position: absolute;
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
  }

  .slideshow--{{ section.id }} .slideshow__slide-image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .slideshow--{{ section.id }} .slideshow__slide-image-missing {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f1f1f1;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #888;
    font-size: 24px;
  }

  .slideshow--{{ section.id }} .flickity-prev-next-button.previous,
  .slideshow--{{ section.id }} .flickity-prev-next-button.next {
    display: none;
  }

  @media(max-width: 1199px) {
    .slideshow--{{ section.id }} .hero-text-container {
      left: var(--space-3);
      padding-left: var(--space-3);
      padding-right: var(--space-3);
    }
  }

  @media(max-width: 749px) {
    .slideshow--{{ section.id }} .slideshow__slide {
      height: {{ section.settings.height_mobile }}vh;
    }
    .slideshow--{{ section.id }} .hero-text-container {
      max-width: 100%;
      left: 20px;
      right: 20px;
      padding: 20px;
    }
    .slideshow--{{ section.id }} .hero-title {
      max-width: 100%;
      white-space: normal;
      font-size: 34px;
    }
    .slideshow--{{ section.id }} .hero-richtext {
      font-size: 16px;
  }

  .header-table {
    height: fit-content !important;
    margin-top: 15px;
  }
  .header-placeholder.full--w {
    height: fit-content !important;
  }
</style>
  
  {% javascript %}
  function initSlideshow() {
    var elem = document.querySelector('.slideshow');
    if (elem) {
      new Flickity(elem, {
        wrapAround: true,
        prevNextButtons: false,
        pageDots: {{ section.settings.show_dots }},
        autoPlay: {{ section.settings.enable_autoplay }} ? {{ section.settings.autoplay_speed | times: 1000 }} : false,
        pauseAutoPlayOnHover: false
      });
    }
  }
  
  function destroySlideshow() {
    var elem = document.querySelector('.slideshow');
    if (elem && elem.classList.contains('flickity-enabled')) {
      Flickity.data(elem).destroy();
    }
  }
  
  function handleBlockSelect(event) {
    const blockSelectedIsSlide = event.target.classList.contains('slideshow__slide');
    if (!blockSelectedIsSlide) return;
    const parentSlideshowComponent = event.target.closest('.slideshow');
    parentSlideshowComponent.classList.add('is-paused');
    destroySlideshow();
  }
  
  function handleBlockDeselect(event) {
    const blockDeselectedIsSlide = event.target.classList.contains('slideshow__slide');
    if (!blockDeselectedIsSlide) return;
    const parentSlideshowComponent = event.target.closest('.slideshow');
    parentSlideshowComponent.classList.remove('is-paused');
    initSlideshow();
  }
  
  document.addEventListener('shopify:section:load', initSlideshow);
  document.addEventListener('shopify:section:unload', destroySlideshow);
  document.addEventListener('shopify:block:select', handleBlockSelect);
  document.addEventListener('shopify:block:deselect', handleBlockDeselect);
  {% endjavascript %}
  
  <div class="slideshow slideshow--{{ section.id }}" data-flickity='{ "autoPlay": {{ section.settings.enable_autoplay }}, "wrapAround": true }'>
    {% for block in section.blocks %}
      <div class="slideshow__slide slide--{{ block.id }}" style="background-color: {{ block.settings.background_color }}; {% if block.settings.background_image != blank %}background-image: url({{ block.settings.background_image | img_url: '1920x' }});{% endif %}">

        <div class="slideshow__slide-image-wrapper">
          {% if block.settings.image != blank %}
            {% liquid 
              case block.settings.image_position
                when 'top_left'
                  assign image_position_style = 'top:0;left:0;'
                when 'top_center'
                  assign image_position_style = 'top:0;left:50%;transform:translateX(-50%);'
                when 'top_right'
                  assign image_position_style = 'top:0;right:0;'
                when 'center_left'
                  assign image_position_style = 'top:50%;left:0;transform:translateY(-50%);'
                when 'center_center'
                  assign image_position_style = 'top:50%;left:50%;transform:translate(-50%, -50%);'
                when 'center_right'
                  assign image_position_style = 'top:50%;right:0;transform:translateY(-50%);'
                when 'bottom_left'
                  assign image_position_style = 'bottom:0;left:0;'
                when 'bottom_center'
                  assign image_position_style = 'bottom:0;left:50%;transform:translateX(-50%);'
                when 'bottom_right'
                  assign image_position_style = 'bottom:0;right:0;'
              endcase
            %}

            <img class="slideshow__slide-image" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}" style="width: {{ block.settings.image_scale }}%; {{ image_position_style }}" />
          {% endif %}
        </div>
        <div class="slideshow__slide-overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
        <div class="hero-text-container" style="text-align: {{ block.settings.text_alignment }}; background-color: {{ block.settings.text_background_color }};">
          <h2 class="hero-title" style="color: {{ block.settings.heading_color }};">{{ block.settings.heading }}</h2>
          {% if block.settings.heading_underlined != blank %}
            <h2 class="hero-title hero-title-underlined-text" style="color: {{ block.settings.heading_color }};">{{ block.settings.heading_underlined }}<span class="hero-title-underline"></span></h2>
          {% endif %}
          <div class="hero-richtext" style="color: {{ block.settings.richtext_color }};">{{ block.settings.richtext }}</div>
          <div class="hero-cta-wrapper" style="
            {% if block.settings.text_alignment == 'left' %}
              justify-content: flex-start;
            {% elsif block.settings.text_alignment == 'right' %}
              justify-content: flex-end;
            {% else %}
              justify-content: center;
            {% endif %}
          ">
            {% if block.settings.button_one_text != blank %}
              <a class="btn aw-hero-cta aw-btn--navy" href="{{ block.settings.button_one_link }}" style="background-color: {{ block.settings.button_one_bg_color }}; color: {{ block.settings.button_one_text_color }};">{{ block.settings.button_one_text }}</a>
            {% endif %}
            {% if block.settings.button_two_text != blank %}
              <a class="btn aw-hero-cta aw-btn--navy" href="{{ block.settings.button_two_link }}" style="background-color: {{ block.settings.button_two_bg_color }}; color: {{ block.settings.button_two_text_color }};">{{ block.settings.button_two_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
